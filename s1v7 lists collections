void main() {
  // Use a List constructor.
  var vegetables = List();

// Or simply use a list literal.
  var fruits = ['apples', 'oranges'];

  /*
  The List class also defines several methods for adding
   items to and removing items from lists.
   */

  // Add to a list.
  fruits.add('kiwis');

// Add multiple items to a list.
  fruits.addAll(['grapes', 'bananas']);

// Get the list length.
  assert(fruits.length == 5);

// printing list of fruits
  print(fruits);

// Remove a single item.
  var appleIndex = fruits.indexOf('apples');
  fruits.removeAt(appleIndex);
  assert(fruits.length == 4);

// printing list of fruits after removing 1 item
  print("After removing 1 item \r\n ${fruits}");

// Here \r means hardcore Enter and \n means new line

// Remove all elements from a list.
  fruits.clear();
  assert(fruits.length == 0);
}
